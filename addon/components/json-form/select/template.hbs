{{#if field.multiple}}
  {{#power-select-multiple
    closeOnSelect=false
  disabled=disabled
  selected=(readonly selected)
  triggerClass=selectClassNames
  searchEnabled=searchEnabled
  options=options
  allowClear=allowClear
  renderInPlace=true
  placeholder=field.placeholder
  searchField='label'
  onfocus=(action 'handleFocus')
  onclose=(action 'onclose')
  search=(action 'searchUrl')
  onchange=(action 'onSelected')
  oninput=(action 'addOption')
  as |item select|
  }}
    {{#if (and field.allow_add (eq select.results.firstObject item))}}
      {{addPrefixText}}
    {{/if}}
    {{if item.label item.label item}}
  {{/power-select-multiple}}

{{else}}

  {{#power-select
    selected=(readonly selected)
    searchEnabled=searchEnabled
    allowClear=allowClear
    options=options
    placeholder=field.placeholder
    triggerClass=selectClassNames
    renderInPlace=true
    searchField='label'
    onfocus=(action 'handleFocus')
    onclose=(action 'onclose')
    search=(action 'searchUrl')
    onchange=(action 'onSelected')
    oninput=(action 'addOption')
      as |item|
  }}
    {{if item.label item.label item}}
  {{/power-select}}
{{/if}}