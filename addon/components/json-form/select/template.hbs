{{#if field.multiple}}
  {{#power-select-multiple
  selected=(readonly selected)
  triggerClass=selectClassNames
  searchEnabled=searchEnabled
  options=options
  allowClear=allowClear
  renderInPlace=true
  searchField='label'
  onfocus=(action 'handleFocus')
  onclose=(action 'onclose')
  search=(action 'searchUrl')
  onchange=(action 'onSelected')
  as |item|
  }}
    {{if item.label item.label item}}
  {{/power-select-multiple}}

{{else}}

  {{#power-select
    selected=(readonly selected)
    searchEnabled=searchEnabled
    allowClear=allowClear
    options=options
    triggerClass=selectClassNames
    renderInPlace=true
    searchField='label'
    onfocus=(action 'handleFocus')
    onclose=(action 'onclose')
    search=(action 'searchUrl')
    onchange=(action 'onSelected')
      as |item|
  }}
    {{if item.label item.label item}}
  {{/power-select}}
{{/if}}